<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <hr>
  <div class="input-group mb-3 w-25">
  <span class="input-group-text"><%= form.label :role %>
  </span>
    <%= form.select :role, options_for_select(['guest', 'basic', 'admin']), {}, :class => 'form-select', disabled: !current_user.admin? %>
  </div>

  <div class="input-group mb-3 w-50">
  <span class="input-group-text"><%= form.label :email %>
  </span>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
  </div>

  <hr>
  <div class="input-group mb-3 w-50">
  <span class="input-group-text"><%= form.label :username %>
  </span>
    <%= form.text_field :username, autofocus: true, autocomplete: "username", :placeholder => "Username", :class => "form-control" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
