<%# unless comment.archived? %>
<ul class="list-group list-group-flush w-50">
<li class="list-group-item">
  <p>
    <strong>User:</strong>
  <%= comment.user.username%>
</p>

<p>
  <strong>Comment:</strong>
  <%= comment.body%>
</p>

<p class="timestamp">
  Created on: <%= comment.created_at.strftime("%d %b %y %H:%M") %> 
  <br>
  Updated <%= time_ago_in_words(comment.updated_at) %> ago
</p>
<% if current_user == comment.user %>
<p>
  <%= link_to "Delete", [comment.article, comment], :class => "link-danger link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover", data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %>
</p>
<% end %>

</li>
</ul>
<hr>

<%# end %>